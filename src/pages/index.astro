  <script>
    //Fanger det første SVG-element med klassen "redline"
    const svg = document.querySelector("svg.redline");
    //Fanger det første path-element inden for det valgte SVG-element
    const path = svg.querySelector("path");

    // Funktionen scroll() beregner, hvor meget brugeren har scrollet i forhold til højden af SVG-elementet.
    const scroll = () => {
      //Fanger den aktuelle scroll-position i pixels
      const distance = window.scrollY;

      //Beregner den samlede scrollbare distance for SVG-elementet.
      const totalDistance = svg.clientHeight - window.innerHeight;

      //Beregner procentdelen af den samlede scrollbare distance, som brugeren har scrollet.
      const percentage = distance / totalDistance;

      // Fanger den totale længde af path-elementet i SVG.
      const pathLength = path.getTotalLength();

      path.style.strokeDasharray = `${pathLength}`;
      path.style.strokeDashoffset = `${pathLength * (1 - percentage)}`;
    };

    scroll();
    window.addEventListener("scroll", scroll);

    document.querySelector("#clothes_fuld").classList.add("timer");
  </script>
